{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "regexManagers": [
      {
        "fileMatch": ["*.ya?ml$"],
        "matchStringsStrategy": "combination",
        "matchStrings": ["^\s+chart_repo_url:(\s+)?(?<registryUrl>.*?)\\nchart_ref:(\s+)?(?<depName>.*?)\\nchart_version:(\s+)?(?<currentValue>.*?)"],
        "datasourceTemplate": "helm"
      }
    ]
  }