{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["nginx", "apache2"],
      "matchUpdateTypes": ["minor", "patch", "major"],
      "automerge": true,
      "automergeType": "pr",
      "prConcurrentLimit": 1,
      "labels": ["renovate"],
      "schedule": ["after 9am"],
      "groupName": "renovate",
      "dependencyDashboardApproval": false
    },
    {
      "matchPackagePatterns": ["memcached"],
      "matchUpdateTypes": ["minor", "patch", "major"],
      "automerge": true,
      "automergeType": "pr",
      "prConcurrentLimit": 1,
      "labels": ["renovate"],
      "schedule": ["after 9am"],
      "groupName": "renovate",
      "dependencyDashboardApproval": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "chart_repo_url: (?<registryUrl>.*?)\n *chart_ref: (?<depName>.*?)\n *chart_version: (?<currentValue>.*?)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
